@page "/bootstrapJS"
@inject IJSRuntime JS

<PageTitle>bootstrapJS</PageTitle>

<h1>bootstrapJS</h1>

<div><u>Test Popover Below</u></div>

<button type="button" class="btn btn-secondary" data-bs-toggle="popover" title="Popover title" data-bs-content="Popover body content">
  Popover Button
</button>

<div><u>Test Tooltip Below</u></div>

<span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip" title="Tooltip text">
  <button class="btn btn-primary" style="pointer-events: none;" type="button" disabled>Tooltip Button</button>
</span>


@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
          await JS.InvokeVoidAsync("initializeBootstrapComponents");
        }
    }
}